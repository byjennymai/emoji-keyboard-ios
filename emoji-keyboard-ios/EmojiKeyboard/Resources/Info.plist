<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Emoji Keyboard</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>
    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    <key>LSMinimumSystemVersion</key>
    <string>12.0</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    
    <!-- Accessibility Permission -->
    <key>NSAccessibilityUsageDescription</key>
    <string>Emoji Keyboard needs accessibility access to insert emojis directly into other applications. This allows seamless emoji insertion without using copy/paste.</string>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
    
    <!-- Application supports dark mode -->
    <key>NSRequiresAquaSystemAppearance</key>
    <false/>
    
    <!-- High Resolution Capable -->
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Background modes for staying active -->
    <key>LSUIElement</key>
    <false/>
    
    <!-- Allow app to run in background -->
    <key>LSBackgroundOnly</key>
    <false/>
    
    <!-- Human readable copyright -->
    <key>NSHumanReadableCopyright</key>
    <string>Copyright Â© 2024 Emoji Keyboard. All rights reserved.</string>
    
    <!-- App icon -->
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    
    <!-- Supported document types (none for this app) -->
    <key>CFBundleDocumentTypes</key>
    <array>
    </array>
    
    <!-- URL schemes (none for this app) -->
    <key>CFBundleURLTypes</key>
    <array>
    </array>
    
    <!-- Services provided by this app -->
    <key>NSServices</key>
    <array>
    </array>
    
    <!-- Required capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
    </array>
</dict>
</plist> 